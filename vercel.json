{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ]
}
